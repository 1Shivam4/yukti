# Database Environment Variables

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://yukti_admin:your_password_here@localhost:5432/yukti"

# Example for Docker PostgreSQL
# DATABASE_URL="postgresql://yukti_admin:your_password_here@your-ec2-ip:5432/yukti"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"

# AWS Cognito (Backend)
COGNITO_USER_POOL_ID="us-east-1_XXXXXXXXX"
COGNITO_CLIENT_ID="XXXXXXXXXXXXXXXXXXXXXXXXXX"
COGNITO_ISSUER="https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX"
COGNITO_DOMAIN="your-app.auth.us-east-1.amazoncognito.com"

# OAuth Redirect URI (for social logins)
OAUTH_REDIRECT_URI="http://localhost:3000/auth/callback"

# Frontend Environment Variables (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_COGNITO_USER_POOL_ID="us-east-1_XXXXXXXXX"
NEXT_PUBLIC_COGNITO_CLIENT_ID="XXXXXXXXXXXXXXXXXXXXXXXXXX"
NEXT_PUBLIC_COGNITO_DOMAIN="your-app.auth.us-east-1.amazoncognito.com"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Google Gemini API
GEMINI_API_KEY="your_gemini_api_key_here"

# Node Environment
NODE_ENV="development"
