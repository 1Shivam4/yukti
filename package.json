  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.8.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.3.8",
