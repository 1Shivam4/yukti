{
  "name": "@yukti/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node --import tsx src/index.ts",
    "build": "tsc && esbuild src/**/*.ts --bundle --platform=node --outdir=dist --format=esm",
    "build:lambda": "tsx scripts/build-lambdas.ts",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.0.13",
    "@aws-sdk/client-cognito-identity-provider": "^3.716.0",
    "@aws-sdk/client-s3": "^3.716.0",
    "@aws-sdk/s3-request-presigner": "^3.716.0",
    "@yukti/database": "workspace:*",
    "@yukti/shared": "workspace:*",
    "ai": "^4.1.8",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.151",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/uuid": "^11.0.0",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
